<h1>図書館検索</h1>
<%= form_with url: new_libraries_search_path, scope: :q, method: "get", local: true, skip_enforcing_utf8: true, html: {class: "search-form"} do |f| %>
<div class="d-flex col-4">
  <%= f.text_field :city, class: "form-control" %>
  <%= f.submit "検索", name: nil, class: "btn btn-primary ml-2" %>
</div>
<% end %>
<div id="libraries" class="mt-4">
  <div class="library card p-1 m-1 d-inline-block align-top">
    <div class="card-body p-2">
      <%= check_box_tag "is_create" %><br />
      <%= label_tag "is_create", "テックジム図書館", class: 'title card-title' %>
      <p class="other card-text">東京都港区</p>
      <p class="other card-text">03-1234-5678</p>

        <%= link_to "/", target: "_blank", class: "btn btn-primary d-block mb"  do %>
        図書館HP <i class="fas fa-external-link-alt ml-1"></i>
        <% end %>
    </div>
  </div>
</div>
