<h1><%= Book.model_name.human %>情報</h1>
<div class="mt-3">
  <div class="col-md-12">
    <table class="table table-striped">
      <tbody>
        <tr>
          <td class="left-row"><%= t Book.human_attribute_name(:isbn) %></td>
          <td><%= @book.isbn %></td>
        </tr>
        <tr>
          <td class="left-row"><%= t Book.human_attribute_name(:title) %></td>
          <td><%= @book.title %></td>
        </tr>
        <tr>
          <td class="left-row"><%= t Book.human_attribute_name(:thumbnail_url) %></td>
          <td><%= image_tag @book.thumbnail_url %></td>
        </tr>
        <tr>
          <td class="left-row"><%= t Book.human_attribute_name(:url) %></td>
          <td><%= link_to @book.url %></td>
        </tr>
        <tr>
          <td class="left-row"><%= t Book.human_attribute_name(:description) %></td>
          <td><%= @book.description %></td>
        </tr>
        <tr>
          <td class="left-row"><%= t Book.human_attribute_name(:status) %></td>
          <td><%= @book.status_i18n %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to '戻る', books_path, class: "btn btn-secondary" %>
  </div>
</div>
